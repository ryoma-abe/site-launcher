{
  "manifest_version": 3,
  "name": "Site Launcher",
  "version": "1.0",
  "description": "キーボードショートカットでサイトを素早く開く",
  "permissions": ["storage"],
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "public/icon16.png",
      "48": "public/icon48.png",
      "128": "public/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "ランチャーを開く"
    }
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  }
}